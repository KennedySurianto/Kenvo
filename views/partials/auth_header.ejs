    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="style/style.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"
        defer></script>
        
    <link rel="icon"
        href="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTGqxqftFmvOvCttsTPir-yzTkN6abNRWR3VFd0bsgwee0SK88TnBGf5aEVfqKKMKct_1Y&usqp=CAU"
        type="image/png" sizes="32x32">

</head>

<body>
    <main>
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse pt-3 justify-content-center" id="navbarNav">
                    <ul class="navbar-nav rounded-5 px-4">
                        <li class="nav-item">
                            <a class="nav-link mx-2 <% if (locals.groupActive && groupActive) { %> active <% } %>"
                                href="/groups">Groups</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2 <% if (locals.friendActive && friendActive) { %> active <% } %>"
                                href="/home">Friends</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2 <% if (locals.pendingActive && pendingActive) { %> active <% } %>"
                                href="/pending">Pending</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2 <% if (locals.userActive && userActive) { %> active <% } %>"
                                href="/users">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2 <% if (locals.profileActive && profileActive) { %> active <% } %>"
                                href="/profile">Profile</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <script>
            window.addEventListener('scroll', function () {
                const navbar = document.querySelector('.navbar-nav');
                const navbara = document.querySelectorAll('.navbar-nav a');
                const isScrolled = window.scrollY > 0; // Check if scrolled down

                if (isScrolled) {
                    navbar.classList.add('navbar-background');
                } else {
                    navbar.classList.remove('navbar-background');
                }
            });
        </script>